```prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model IdentityVerification {
  id        String   @id @default(cuid())
  userId    String
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationSession {
  id                String   @id @default(cuid())
  identityId        String
  sessionToken      String
  expiresAt         DateTime
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
```