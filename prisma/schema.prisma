```prisma
model WorkflowFeedback {
  id          String   @id @default(uuid())
  userId      String
  workflowId  String
  feedback    String
  createdAt   DateTime @default(now())
  metrics     FeedbackMetrics @relation(fields: [metricsId], references: [id])
  metricsId   String

  @@index([userId, workflowId])
}

model FeedbackMetrics {
  id          String   @id @default(uuid())
  rating      Int
  comments    String?
  feedback    WorkflowFeedback?
}
