```prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model LearningSession {
  id         Int       @id @default(autoincrement())
  userId     Int
  sessionData Json     @db.JsonB
  createdAt  DateTime  @default(now()) @db.Timestamptz
  EmotionalMetrics EmotionalMetric[]
  ContentAdaptations ContentAdaptation[]
}

model EmotionalMetric {
  id        Int       @id @default(autoincrement())
  session   LearningSession @relation(fields: [sessionId], references: [id])
  sessionId Int
  metrics   Json      @db.JsonB
  timestamp DateTime  @default(now()) @db.Timestamptz
}

model ContentAdaptation {
  id               Int       @id @default(autoincrement())
  session          LearningSession @relation(fields: [sessionId], references: [id])
  sessionId        Int
  adaptationDetails Json     @db.JsonB
  createdAt        DateTime  @default(now()) @db.Timestamptz
}

model TeacherDashboard {
  id            Int       @id @default(autoincrement())
  teacherId     Int
  dashboardData Json      @db.JsonB
  updatedAt     DateTime  @default(now()) @db.Timestamptz
}
```