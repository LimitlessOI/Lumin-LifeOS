```prisma
model CodeReview {
  id                String   @id @default(uuid())
  codeSnippet       String
  feedback          String?
  status            String   @default("pending")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model CodeReviewMetric {
  id          String   @id @default(uuid())
  reviewId    String
  metricName  String
  metricValue Float
  createdAt   DateTime @default(now())

  @@index([reviewId], name: "reviewId_idx")
}
