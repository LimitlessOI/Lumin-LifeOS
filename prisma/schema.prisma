```prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EnergyProfile {
  id        Int      @id @default(autoincrement())
  userId    String
  profileData Json
  createdAt DateTime @default(now())
}

model EnergyTransaction {
  id           Int      @id @default(autoincrement())
  buyerId      String
  sellerId     String
  amount       Float
  transactionDate DateTime @default(now())
}

model IoTDeviceRegistry {
  id       Int    @id @default(autoincrement())
  deviceId String
  ownerId  String
  data     Json
}

model NeighborhoodGrid {
  id       Int    @id @default(autoincrement())
  gridData Json
  location String
}
